    </parent>


    <artifactId>sc-application</artifactId>


    <profiles>
        <profile>
            <id>localhost</id>
            <properties>
                <db.connection-properties/>
                <db.user>shopcard</db.user>
                <db.password>shopcard</db.password>
                <db.validation-query>SELECT 1</db.validation-query>
                <db.url>jdbc:mysql://localhost:3306/customer</db.url>
                <db.driver-class-name>com.mysql.jdbc.Driver</db.driver-class-name>
            </properties>
        </profile>
    </profiles>


